  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Handle delete form button click event
      const deleteButtons = document.querySelectorAll('.delete-btn');
      const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');

      deleteButtons.forEach(btn => {
        btn.addEventListener('click', () => {
          const formId = btn.dataset.formId;
          showDeleteFormModal(formId);
        });
      });

      // Show delete form confirmation modal
      function showDeleteFormModal(formId) {
        const deleteFormModal = new bootstrap.Modal(document.getElementById('deleteFormModal'));
        confirmDeleteBtn.addEventListener('click', () => {
          deleteForm(formId);
          deleteFormModal.hide();
        });
        deleteFormModal.show();
      }

      // Delete form
      function deleteForm(formId) {
        fetch(`/ui-forms/${formId}`, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json'
          }
        })
          .then(response => {
            if (response.ok) {
              // Reload the page or update the UI as needed
              location.reload();
            } else {
              console.error('Error deleting form');
            }
          })
          .catch(error => {
            console.error('Error deleting form:', error);
          });
      }
    });
  </script>
